---
const pages = ['launch', 'capsule', 'spaceport'];
---

<style>
  .tech__links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    list-style: none;
    padding: 0;
  }

  .tech__link {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.6rem;
    border: solid 0.1rem var(--white);
    line-height: 1;
    border-radius: 50%;
    width: 4rem;
    height: 4rem;
    color: var(--white);
  }
</style>

<div class="tech__navbar">
  <nav class="tech__nav">
    <ul class="tech__links">
      {
        pages.map((link, index) => (
          <li class="tech__link-item">
            <a
              href={`/technology/${link}`}
              class="tech__link"
              aria-label={`Redirect to ${link}`}
            >
              {index}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</div>
