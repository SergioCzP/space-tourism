---
const crewPages = ['douglas', 'mark', 'victor', 'anousheh'];
const { crewLink } = Astro.props;
---

<style>
  .crew__nav {
    padding: 3rem 0;
  }

  @media (min-width: 768px) {
    .crew__nav {
      padding: 2rem 0 4rem;
    }
  }

  .crew__links {
    list-style: none;
    display: flex;
    justify-content: center;
    padding: 0;
    gap: 1.5rem;
  }

  .crew__link-item {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    background-color: rgb(255 255 255 / 0.2);
  }

  .crew__link-item--active {
    background-color: var(--white);
  }

  .crew__link {
    width: 1rem;
    height: 1rem;
    padding: 1rem;
    color: transparent;
    background-color: transparent;
    border-radius: 50%;
  }
</style>

<div class="crew__buttons">
  <nav class="crew__nav">
    <ul class="crew__links">
      {
        crewPages.map((link) => (
          <li
            class={`crew__link-item ${crewLink === link ? 'crew__link-item--active' : ''}`}
          >
            <a
              href={`/crew/${link === 'douglas' ? '' : link}`}
              class="crew__link"
              aria-label={`Redirect to ${link} page`}
            >
              {link}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</div>
